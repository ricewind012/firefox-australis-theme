.dialog {
	&Overlay[topmost="true"] {
		background-color: rgba(0,0,0,0.5) $i;
	}

	&Box {
		background-color: #fbfbfb $i;
		background-clip: content-box $i;
		color: #424e5a $i;
		font-size: 14px $i;
		/* `transparent` will use the dialogText color in high-contrast themes and
			 when page colors are disabled */
		border: 1px solid transparent $i;
		border-radius: 3.5px $i;
		box-shadow: 0 2px 6px 0 rgba(0,0,0,0.3) $i;
		padding: 0 $i;

		&[resizable="true"] {
			resize: both $i;
			overflow: hidden $i;
			min-width: 66ch $i;
		}

		.close-icon {
			background-color: transparent $i;
			border: none $i;
			box-shadow: none $i;
			padding: 0 $i;
			height: auto $i;
			min-height: 16px $i;
			min-width: 0 $i;
		}
	}

	&TitleBar {
		padding: 3.5px 0 $i;
		background-color: #F1F1F1 $i;
		border-bottom: 1px solid #C1C1C1 $i;
	}

	&Frame {
		margin: 0 $i;
	}
}

dialog {
	@extend .dialogBox;
	background-color: #fff $i;

	&[subdialog] {
		padding: 0 $i;
	}
}

.box-inherit[part="content-box"] {
	padding: 20px $i;
}

// New dialogs
h1[part="header"] {
	@extend .dialogTitleBar;
	text-align: center;
	font-size: inherit $i;
	font-weight: 600 $i;
	line-height: 1.8em $i;
}
